<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sub_background">

        <TextView
            android:id="@+id/selectedPath"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="15dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Selected Path"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/startLiveLocationBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startLiveLocationBtn"
            android:layout_width="212dp"
            android:layout_height="54dp"
            android:text="Start Live Location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.700" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>