        <AutoCompleteTextView
            android:id="@+id/tv_destination"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="36dp"
            android:background="@drawable/button_background_red1"
            android:gravity="center"
            android:hint="@string/Destination"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/spin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:padding="12sp"
            android:entries="@array/transportations"
            android:layout_margin="16dp"
            android:spinnerMode="dropdown"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/costET"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/costET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="التكلفة"
            android:padding="16sp"
            android:layout_margin="32dp"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

